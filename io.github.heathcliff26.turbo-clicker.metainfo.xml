<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
    <id>io.github.heathcliff26.turbo-clicker</id>

    <name>Turbo Clicker</name>
    <summary>Graphical auto-clicker app</summary>

    <metadata_license>MIT</metadata_license>
    <project_license>Apache-2.0</project_license>

    <description>
        <p>
            Turbo Clicker is a GUI based auto-clicker for Linux. It is using uinput for creating a virtual mouse device. This allows it to simulate mouse clicks independently from x11 or wayland.
        </p>
    </description>

    <url type="homepage">https://github.com/heathcliff26/turbo-clicker</url>
    <developer id="io.github.heathcliff26">
        <name>Heathcliff</name>
    </developer>

    <content_rating type="oars-1.1" />

    <launchable type="desktop-id">io.github.heathcliff26.turbo-clicker.desktop</launchable>

    <branding>
        <color type="primary" scheme_preference="light">#FFFFFF</color>
        <color type="primary" scheme_preference="dark">#141414</color>
    </branding>

